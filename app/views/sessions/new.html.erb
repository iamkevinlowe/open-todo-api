<h2 class="text-center">Log in</h2>

<div class="row">
  <div class="col-md-8">
    <%= form_tag sessions_path do %>
      
      <div class="form-group">
        <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: "Enter username" %>
      </div>

      <div class="form-group">
        <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: "Enter password" %>
      </div>

      <div class="form-group">
        <%= submit_tag "Log in", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>