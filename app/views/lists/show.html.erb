<h2 class="text-center"><%= @list.name %> Items</h2>

<div class="row">
  <div class="col-md-8">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= @list.name %></h4>
      </div>

      <ul class="list-group">
        <%= render partial: @list.items %>
        <li class="list-group-item">
          <%= form_for [@list, @item], class: 'form-inline' do |f| %>
            <div class="form-group">
              <%= f.text_field :description, class: 'form-control', placeholder: "Enter new item" %>
            </div>
            <%= f.submit "New", class: 'btn btn-success btn-sm' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>